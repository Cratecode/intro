{
    "root": "/user",
    "outputView": "web",
    "outputViews": ["web"],
    "validator": {
        "requireRun": true,
        "validate": [
            {
                "_comment": "A heading should exist.",
                "file": "user/index.html",
                "regex": "/<h[1-6](?:\\s|>)/g",
                "message": "Make sure you use a heading."
            },
            {
                "_comment": "A paragraph should exist.",
                "file": "user/index.html",
                "regex": "/<p(?:\\s|>)/g",
                "message": "Make sure you use a paragraph."
            },
            {
                "_comment": "A styling tag should exist.",
                "file": "user/index.html",
                "regex": "/<(?:strong|small|i|s|)(?:\\s|>)/g",
                "message": "Make sure you use one of the styling tags."
            }
        ]
    }
}
