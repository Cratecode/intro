{
    "validator": {
        "validate": [
            {
                "_comment": "A link should exist.",
                "file": "user/index.html",
                "regex": "/<a\\s+href\\s*=/",
                "message": "Make sure you create a Hyperlink."
            },
            {
                "_comment": "We should point to login.",
                "file": "user/index.html",
                "regex": "/href\\s*=\\s*\"\\s*/login/",
                "message": "Make sure you link to the login page."
            }
        ]
    }
}
